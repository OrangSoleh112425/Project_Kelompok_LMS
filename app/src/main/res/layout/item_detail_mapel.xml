<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_mapel_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_judul"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_nama_mapel_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_mapel_icon"
        android:text="Nama Mata Pelajaran"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_jam_mapel_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama_mapel_detail"
        android:layout_toEndOf="@id/iv_mapel_icon"
        android:layout_marginTop="4dp"
        android:text="00:00 - 00:00"
        android:textColor="@color/light_text" />

</RelativeLayout>
